@model IEnumerable<WA.OdaSicakligiOlcme.Models.Cihazlar>

@{
    ViewBag.Title = "CİHAZLAR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CİHAZLAR</h2>



<p>
    @Html.ActionLink("Yeni Cihaz Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.CihazID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.CihazID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.CihazID }) |
            @Html.ActionLink("Sıcaklık", "Sicaklik", new { id = item.CihazID }) |

        </td>
    </tr>
}

</table>
